<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/ongoingCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TxtvCardUserFeedbackRentalID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="Rental ID : XX - XXXX"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textRentalDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TxtvCardUserFeedbackRentalID"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Rental Date"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TxtvCardUserFeedbackRentalDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TxtvCardUserFeedbackRentalID"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="dd month yyyy"
                android:textAlignment="gravity"
                android:textSize="20dp" />



            <TextView
                android:id="@+id/textOwnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textRentalDate"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:text="Owner"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TxtvCardUserFeedbackVehicleOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TxtvCardUserFeedbackRentalDate"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:gravity="right"
                android:text="Ismail"
                android:textAlignment="gravity"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textOwnerName"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Feedback"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TxtvCardUserFeedbackComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textFeedback"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:text="Great customer I've ever met"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/TxtvCardUserFeedbackComment"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Rate"/>

            <RatingBar
                android:id="@+id/TxtvCardUserFeedbackRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textRating"
                android:layout_marginStart="85dp"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="10dp"
                android:numStars="5"
                android:rating="4"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>