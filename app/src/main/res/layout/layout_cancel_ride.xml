<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/CardActivityCArd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:paddingBottom="20dp"
        app:cardElevation="15dp"
        android:background="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/CardActivityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textColor="#FF5555"
                android:textSize="25dp"
                android:text="Logout"/>

            <TextView
                android:id="@+id/textRentalID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_below="@+id/CardActivityTitle"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Are you want to logout !"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EdtCancelDetails"
                android:layout_width="325dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textRentalID"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/textfields"
                android:elegantTextHeight="true"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:hint="Cancel Reason (* Required )"
                android:gravity="top"/>

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EdtCancelDetails"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#FF0000"
                android:text="Cancel Ride"
                android:textSize="18dp"
                android:textStyle="bold"
                app:iconTint="#6987F1" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>