<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ActivityHome"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/top_bar"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:src="@drawable/cover"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="55dp"/>

    <ImageView
        android:id="@+id/app_name"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:src="@drawable/app_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"/>

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/notification"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"/>

    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"/>

    <ImageView
        android:id="@+id/ImgHomeBike"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bike"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/greeting_text"
        android:layout_marginTop="15dp"
        android:layout_marginStart="45dp"/>

    <ImageView
        android:id="@+id/ImgHomeTuktuk"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/tuktuk"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/greeting_text"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"/>

    <ImageView
        android:id="@+id/ImgHomeCar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/car"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ImgHomeBike"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/ImgHomeVan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/van"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ImgHomeTuktuk"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/ImgHomePromo"
        android:layout_width="325dp"
        android:layout_height="155dp"
        android:src="@drawable/promotion"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ImgHomeCar"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/home_icon" />

    <ImageView
        android:id="@+id/activities_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="147dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/activities_icon"/>

    <ImageView
        android:id="@+id/vehicle_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/vehicle_icon" />

    <ImageView
        android:id="@+id/profileicon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/profileicon" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_baground"
        app:itemIconSize="25dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav"/>

</RelativeLayout>