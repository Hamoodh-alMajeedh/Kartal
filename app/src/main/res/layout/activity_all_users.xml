<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAllUsers"
    android:fitsSystemWindows="true">

<View
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/top_bar"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<ImageView
    android:id="@+id/back_button"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="15dp"
    android:layout_marginTop="25dp"
    android:src="@drawable/btn_back"/>

<TextView
    android:id="@+id/title_terms_and_conditions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_toEndOf="@+id/back_button"
    android:text="Users"
    android:textColor="#FFFFFF"
    android:textSize="30dp" />

<ImageView
    android:id="@+id/notification_icon"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/notification"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="25dp"/>

    <EditText
        android:id="@+id/EdtActivityAllUsersSearch"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/top_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:hint="ðŸ” Search"
        android:background="@drawable/textfields"
        android:paddingLeft="15dp"/>

<ListView
    android:id="@+id/ListActivityAllUsersList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/EdtActivityAllUsersSearch"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="25dp"
    android:divider="@null"
    android:dividerHeight="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"/>

</RelativeLayout>