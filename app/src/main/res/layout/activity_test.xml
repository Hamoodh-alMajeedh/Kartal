<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTest"
    android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/BtnTestLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:elegantTextHeight="true"
            android:textColor="@color/white"/>

        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/BtnTestUserRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Register"
            android:elegantTextHeight="true"
            android:textColor="@color/white"/>

        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/BtnTestOtpVarification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Otp Varification"
            android:elegantTextHeight="true"
            android:textColor="@color/white"/>

        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/BtnTestHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:elegantTextHeight="true"
            android:textColor="@color/white"/>

        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/BtnTestMyActivities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Activities"
            android:elegantTextHeight="true"
            android:textColor="@color/white"/>

        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/BtnTestVehicleRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle Register"
            android:elegantTextHeight="true"
            android:textColor="@color/white"/>

        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/BtnTestVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle"
            android:elegantTextHeight="true"
            android:textColor="@color/white"/>

        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/BtnTestVehicleDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle Details"
            android:elegantTextHeight="true"
            android:textColor="@color/white"/>


        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/BtnTestVehicleAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:elegantTextHeight="true"
            android:textColor="@color/white"/>

        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/BtnTestVehicleMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main"
            android:elegantTextHeight="true"
            android:textColor="@color/white"/>

        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/BtnTestVehicleLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:elegantTextHeight="true"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>