<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/ongoingCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/CardUsersUserprofilePic"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ismail"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/CardUsersUsernameFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/CardUsersUserprofilePic"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Mohamed"/>

            <TextView
                android:id="@+id/CardUsersUsernameLast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/CardUsersUsernameFirst"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Ismail"/>

            <TextView
                android:id="@+id/CardUsersUserPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CardUsersUsernameFirst"
                android:layout_toEndOf="@+id/CardUsersUserprofilePic"
                android:layout_marginStart="15dp"
                android:textSize="18dp"
                android:textColor="#8c8c8c"
                android:text="+94 76 395 9511"/>

            <TextView
                android:id="@+id/CardUsersUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CardUsersUserPhone"
                android:layout_toEndOf="@+id/CardUsersUserprofilePic"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="18dp"
                android:textColor="#8c8c8c"
                android:text="mhdismail9653@gmail.com"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>